<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
</head>

<body>
  <!-- Global ALert -->
  {{> globalAlert globalAlert}}

  <!-- Header -->
  {{> header header }}

  <!-- Navbar -->
  {{> navbar navbar}}

  {{#if banner}}
  {{> banner banner}}
  {{/if}}

  <main>

    <div class="container mt-40 mt-lg-64">

      {{#if breadcrumbs}}
      <!-- breadcrumbs -->
      <div class="row">
        <div class="col-12">
          {{> breadcrumbs breadcrumbs}}
        </div>
      </div>
      {{/if}}

      <!-- Start Main Content Body -->
      <div class="row">

        <!-- Start Side navigation column (span 3) -->
        <div class="col-12 col-lg-3 mt-0">
          <!-- QGDS Side navigation Component -->
          {{> sidenav sidenav}}
        </div>
        <!-- End Side navigation column -->

        <!-- Start Main Column (span 8) -->
        <div class="col-12 col-lg-8 mt-40 mt-lg-0">

          <!-- Internal wrapper div, provides a 2rem/32px horizontal padding on large screens and up -->
          <div class="px-lg-32">

            <h1 id="section-heading">Single page form (H1)</h1>

            <p>Your feedback is important to us. It tells us how we can improve and what weâ€™re doing well. Your feedback
              is confidential.</p>

            <h2 id="form-heading">Enquiry form (H2)</h2>

            {{#if inpageAlert}}
            <!-- Inpage Alert -->
            <div class="mb-32">
              {{> inpageAlert inpageAlert}}
            </div>
            {{/if}}

            <div class="mb-32">
              <p>Any information submitted using this form will be used in line with our privacy statement.</p>
              <p>Required fields are marked with an *</p>
            </div>

            {{#if form}}
            <form class="qld-form mb-5">
              {{#each form.fields1}}
              <div class="form-group mb-32">
                {{#ifCond type '==' 'textbox'}}
                {{> textbox this}}
                {{else ifCond type '==' 'textarea'}}
                {{> textarea this}}
                {{else ifCond type '==' 'radio'}}
                {{> formcheck this}}
                {{/ifCond}}
              </div>
              {{/each}}

              <h3 id="form-heading">Contact details (H3)</h3>

              {{#each form.fields2}}
              <div class="form-group mb-32">
                {{#ifCond type '==' 'textbox'}}
                {{> textbox this}}
                {{else ifCond type '==' 'select'}}
                {{> select this}}
                {{else ifCond type '==' 'checkbox'}}
                {{> formcheck this}}
                {{/ifCond}}
              </div>
              {{/each}}

              {{#if form.buttons}}
              <div class="form-actions d-flex mt-5 gap-4">
                {{#each form.buttons}}
                {{> button this}}
                {{/each}}
              </div>
              {{/if}}
            </form>
            {{/if}}

          </div>

          <!-- End Internal wrapper div -->

        </div>
        <!-- End Main Column (span 8) -->

      </div>
      <!-- End Main Content Body (Row) -->

      <!-- Start QGDS Content Footer -->
      <div class="mt-64">
        {{> contentFooter contentFooter}}
      </div>

    </div>
    <!-- End Main .container -->

  </main>

  <!-- Start QGDS Footer -->
  {{> footer footer}}
  <!-- End QGDS Footer -->

</body>


</html>