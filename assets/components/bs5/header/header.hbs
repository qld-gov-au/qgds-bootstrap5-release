<header class="qld-header" role="banner">
    <div class="qld-header-pre-header dark">
        <div class="qld-header-container">
            <div class="d-flex justify-content-between align-items-baseline">
                <a class="qld-header-link"
                    href="{{#if preHeader.globalLink.url}}{{preHeader.globalLink.url}}{{else}}https://qld.gov.au{{/if}}">
                    <span class="d-none d-lg-inline">{{preHeader.globalLink.text}}</span>
                    {{>logo className="qld-header-logo" fill="currentColor"}}
                </a>
                <div class="d-none d-lg-flex gap-20 align-items-baseline">
                    {{#if preHeader.CTA}}
                    {{#each preHeader.CTA}}
                    {{#if dropdown_enabled}}
                    <div {{#if dropdown_enabled}} class="dropdown" {{/if}}>
                        <a {{#if dropdown_enabled}} id="dropdown{{id}}" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false" class="qld-header-link" href="#" {{else}} href="{{url.value}}"
                            {{/if}}>
                            {{{text.value}}}
                            {{#if dropdown_enabled}}
                            {{!-- <span
                                class="qld-header-dropdown-icon qld-icon qld-icon-chevron-down qld-icon-xs align-middle ml-2"></span>
                            --}}
                            <svg aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg"
                                class="qld-header-dropdown-icon ">
                                <use href="{{@root.assets.SVGSpritePath}}#{{@root.assets.icons.chevron_down}}" aria-hidden="true"></use>
                            </svg>
                            {{/if}}
                        </a>
                        {{#if dropdown_enabled}}
                        <ul class="dropdown-menu dark" role="list">
                            {{#isType dropdown_options.dropdown_type "list"}}
                            {{#if dropdown_options.dropdown_config}}
                            {{#each dropdown_options.dropdown_config.groups}}
                            <li>
                                <a class="qld-header-link dropdown-item" href="{{url}}" {{#if action}}
                                    target="{{action}}" {{/if}}>
                                    {{label}}
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                        xmlns="http://www.w3.org/2000/svg" class="cta_arrow">
                                        <path
                                            d="M18.8592 12.6135L13.6659 17.6633C13.5721 17.7781 13.4156 17.8068 13.2905 17.8068C13.1654 17.8068 13.0402 17.7781 12.9464 17.692C12.7274 17.5199 12.7274 17.233 12.9151 17.0608L17.295 12.757H5.50056C5.21899 12.757 5 12.5562 5 12.3266C5 12.0971 5.21899 11.8389 5.50056 11.8389H17.295L12.9151 7.56375C12.7274 7.3916 12.7274 7.10468 12.9464 6.93253C13.1654 6.76038 13.4782 6.76038 13.6659 6.96122L18.8592 12.011C19.0469 12.1832 19.0469 12.4414 18.8592 12.6135Z"
                                            fill="#FFE500" />
                                    </svg>
                                </a>
                            </li>
                            {{/each}}
                            {{#if dropdown_options.view_more}}
                            <li>
                                <a href="{{dropdown_options.url}}" target="{{dropdown_options.target}}"
                                    class="qld-header-link dropdown-item border-bottom-0">
                                    {{dropdown_options.label}}
                                </a>
                            </li>
                            {{/if}}
                            {{/if}}
                            {{/isType}}
                            {{#isType dropdown_options.dropdown_type "form"}}
                            {{#if dropdown_options.dropdown_config.content}}
                            {{{dropdown_options.dropdown_config.content}}}
                            {{/if}}
                            {{/isType}}
                        </ul>
                        {{/if}}
                    </div>
                    {{else}}
                    <a class ="qld-header-link" href="{{url.value}}">{{{text.value}}}</a>
                    {{/if}}

                    {{/each}}
                    {{/if}}
                </div>
            </div>

            <div class="qld-header__main-nav-controls">
                {{#if assets.siteSearch.value}}
                <button aria-controls="qld-header-search"
                    class="qld-header__toggle-main-nav qld__main-nav__toggle-search" aria-expanded="false">
                    <svg aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg">
                        <use class="icon-search" href="{{@root.assets.SVGSpritePath}}#{{@root.assets.icons.search-icon}}"
                            aria-hidden="true" style="display: block;"></use>
                        <use class="icon-close" href="{{@root.assets.SVGSpritePath}}#{{@root.assets.icons.close-icon}}"
                            style="display: none;"></use>
                    </svg>
                    <span class="qld__main-nav__toggle-text">Search</span>
                </button>
                {{/if}}
                <button aria-controls="main-nav" class="qld-header__toggle-main-nav qld__main-nav__toggle--open"
                    data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Open menu">
                    <svg aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg">
                        <use href="{{@root.assets.SVGSpritePath}}#{{@root.assets.icons.menu-icon}}" aria-hidden="true"></use>
                    </svg>
                    <span class="qld__main-nav__toggle-text">Menu</span>
                </button>
            </div>

        </div>
    </div>

    <div
        class="qld-header-main {{#if isMasterBrand}}is-masterbrand{{/if}}">
        <div class="container-fluid">
            {{#if isMasterBrand }}
            <div class="qld-header__brand">
                <a href="{{mainContent.url}}">
                    <div class="qld-header__brand-image">
                        {{#if mainContent.logoPath}}
                        <img src="{{mainContent.logoPath}}" width="330" height="56" alt="Queensland Government" />
                        {{else}}
                        {{>logo width="330" height="56" fill="currentColor"}}
                        {{/if}}
                    </div>
                </a>
            </div>
            {{/if}}
            {{#ifAny isSubBrand isCoBrand }}
            <div class="qld-header__brand">
                <a href="{{mainContent.url}}">
                    <div class="qld-header__brand-image is-subtype">
                        {{#if mainContent.logoPath}}
                        <img src="{{mainContent.logoPath}}" width="170" height="56" alt="Queensland Government" />
                        {{else}}
                        {{>logo logo="coa-landscape-2lines" width="170" height="56" fill="currentColor" }}
                        {{/if}}
                    </div>
                    {{#if mainContent.siteTitle}}
                    <div class="qld-header__site-name">
                        <span class="qld-header__heading">
                            {{mainContent.siteTitle}}
                        </span>
                        {{#if mainContent.subline}}
                        <span class="qld-header__subline">
                            {{mainContent.subline}}
                        </span>
                        {{/if}}
                    </div>
                    {{/if}}
                </a>
            </div>
            {{/ifAny}}
            {{#if isEndorsedBrand}}
            <div class="qld-header__brand">
                <a href="{{mainContent.url}}">
                    <div class="qld-header__brand-image qld-header__brand-image_subtype">
                        {{#if mainContent.logoPath}}
                        <div class="qld-header__site-name">
                            <img class="qld-header__secondary-image" alt="{{mainContent.siteTitle}} {{mainContent.subline}}"
                                src="{{mainContent.logoPath}}" />
                        </div>
                        {{/if}}
                    </div>
                    {{#if mainContent.siteTitle}}
                    <div class="qld-header__site-name">
                        <span class="qld-header__heading">
                            {{mainContent.siteTitle}}
                        </span>
                        {{#if mainContent.subline}}
                        <span class="qld-header__subline">
                            {{mainContent.subline}}
                        </span>
                        {{/if}}
                    </div>
                    {{/if}}
                </a>
            </div>
            {{/if}}
            {{#if isStandaloneBrand}}
            <div class="qld-header__brand">
                <a href="{{mainContent.url}}">
                    <div class="qld-header__brand-image">
                        {{#if mainContent.logoPath}}
                        <img src="{{mainContent.logoPath}}" width="170" height="56" alt="Queensland Government" />
                        {{/if}}
                    </div>
                    {{#if mainContent.secondaryLogoPath}}
                    <div class="qld-header__site-name">
                        <img class="qld-header__secondary-image" alt="{{mainContent.siteTitle}}"
                            src="{{mainContent.secondaryLogoPath}}" />
                    </div>
                    {{else}}
                    <div class="qld-header__site-name">
                        <span class="qld-header__heading">
                            {{mainContent.siteTitle}}
                        </span>
                        {{#if mainContent.subline}}
                        <span class="qld-header__subline">
                            {{mainContent.subline}}
                        </span>
                        {{/if}}
                    </div>
                    {{/if}}
                </a>
            </div>
            {{/if}}
            {{#if assets.siteSearch.value}}
            <div id="qld-header-search" class="qld-header__site-search qld-header__site-search--closed">
                <form class="site-search" role="search" {{#if assets.siteSearch.formAction.url}}
                    action="{{assets.siteSearch.formAction.url}}" {{else}} action="https://www.qld.gov.au/search" {{/if}}>
                    {{{ searchInput }}}
                </form>
            </div>
            {{/if}}
        </div>
    </div>
</header>