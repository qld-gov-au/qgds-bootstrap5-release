{{#unless hide_back_to_top}}
  <div class="qld__widgets" data-min-page-height="{{isdefined min_page_height 0}}">
    {{> directionLinks  
        id= (isdefined directionalLink.id "back-to-top")
        label= (isdefined directionalLink.label "Back to top")
        href= (isdefined directionalLink.href "#")
        target= (isdefined directionalLink.target "_self")
        class= (isdefined directionalLink.class "back-to-top up")  
    }}
  </div>
{{/unless}}